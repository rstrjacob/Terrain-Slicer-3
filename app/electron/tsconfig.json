{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node16",
    "outDir": "../dist/electron",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "types": ["node"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
  },
  "include": ["./**/*.ts"]
}
