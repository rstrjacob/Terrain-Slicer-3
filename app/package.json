{
  "name": "florida-mission-planner",
  "version": "0.1.0",
  "private": true,
  "main": "dist/electron/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently -k \"vite dev\" \"wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron -r ts-node/register/transpile-only electron/main.ts\"",
    "build": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:desktop": "npm run build && npm run build:electron && electron-builder",
    "start": "electron .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@monaco-editor/react": "4.5.2",
    "axios": "1.6.7",
    "maplibre-gl": "3.2.1",
    "monaco-editor": "0.45.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/geojson": "7946.0.10",
    "@types/node": "20.11.25",
    "@types/react": "18.2.45",
    "@types/react-dom": "18.2.17",
    "@vitejs/plugin-react": "4.2.1",
    "concurrently": "8.2.1",
    "cross-env": "7.0.3",
    "electron": "28.2.0",
    "electron-builder": "24.9.1",
    "ts-node": "10.9.2",
    "typescript": "5.4.2",
    "vite": "5.2.0",
    "wait-on": "7.2.0"
  },
  "build": {
    "appId": "com.example.floridamission",
    "files": [
      "dist/renderer/**/*",
      "dist/electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "../server",
        "to": "server"
      },
      {
        "from": "../examples",
        "to": "examples"
      }
    ],
    "mac": {
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["AppImage", "tar.gz"]
    }
  }
}
